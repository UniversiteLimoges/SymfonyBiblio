<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="{{ path('index') }}">Symfony Biblio</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse"         data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"    aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('category_index')}}">modifier les categories <span class="sr-only">(current)</span></a>
                        </li>
                    {% elseif is_granted('ROLE_USER') %}
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Voir les livres <span class="sr-only">(current)</span></a>
                        </li>

                    {% endif %}
                </ul>
            </div>
        
            <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
                <ul class="navbar-nav">
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                        <li>
                            <a class="nav-link" href="{{ path('app_logout') }}">Se DÃ©connecter</a>
                        </li>
                    {% else%}
                        <li>
                            <a class="nav-link" href="{{ path('app_register') }}">S'enregistrer</a>
                        </li>
                    {% endif %}
                        <!-- 
                        <li>
                            <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                        </li>
                        -->
                </ul>
            </div>
        </nav>
        {% endblock %}

        {% block body %}{% endblock %}

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
